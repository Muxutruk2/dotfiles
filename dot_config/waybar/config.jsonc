// -*- mode: jsonc -*-
{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "margin-top": 0,
    "margin-left": 0,
    "margin-right": 0,
    "height": 40,
    "spacing": 5,
    "modules-left": [
        "custom/spacer",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/spacer",
        "clock",
        "custom/spacer"
    ],
    "modules-right": [
        "pulseaudio",
        "custom/separator",
        "network",
        "custom/separator",
        "cpu",
        "disk",
        "memory",
        "temperature",
        "custom/separator",
        "battery",
        "power-profiles-daemon",
        "tray",
        "custom/spacer"
    ],
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï®",
            "deactivated": "ï°"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },
    "clock": {
        "timezone": "Europe/Madrid",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%",
        "format-charging": "{capacity}% Charging",
        "format-plugged": "{capacity}% Plugged",
        "format-alt": "{capacity}%\n{timeToEmpty} remaining"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}Â°C {icon}",
        "format": "{temperatureC}Â°C",
        "format-icons": [
            " "
        ],
        "on-click": "wezterm -e sensors"
    },
    "memory": {
        "on-click": "wezterm -e htop",
        "format": "{}% RAM"
    },
    "disk": {
        "interval": 30,
        "format": "{percentage_used}% USAGE",
        "tooltip": true,
        "tooltip-format": "{free} out of {total} available",
        "unit": "GB"
    },
    "cpu": {
        "format": "{usage}% CPU",
        "tooltip": false
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ïƒ§",
            "performance": "ïƒ§",
            "balanced": "ï‰",
            "power-saver": "ï¬"
