// -*- mode: jsonc -*-
{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "margin-top": 6,
    "margin-left": 10,
    "margin-right": 10,
    "height": 40, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules
    // Choose the order of the modules
    "modules-left": [
        "custom/spacer",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "custom/separator",
        "network",
        "custom/separator",
        "cpu",
        "disk",
        "memory",
        "temperature",
        "custom/separator",
        "battery",
        "power-profiles-daemon",
        "tray",
        "custom/spacer"
    ],
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },
    "clock": {
        "timezone": "Europe/Madrid",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%",
        "format-charging": "{capacity}% Charging",
        "format-plugged": "{capacity}% Plugged",
        "format-alt": "{capacity}%\n{timeToEmpty} remaining"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C",
        "format-icons": [
            " "
        ],
        "on-click": "kitty -e sensors"
    },
    "memory": {
        "on-click": "kitty -e htop",
        "format": "{}% RAM"
    },
    "disk": {
        "interval": 30,
        "format": "{percentage_used}% USAGE",
        "tooltip": true,
        "tooltip-format": "{free} out of {total} available",
        "unit": "GB"
    },
    "cpu": {
        "format": "{usage}% CPU",
        "tooltip": false
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        "format-wifi": "WIFI: {essid} ({signalStrength}%) {ipaddr}/{cidr} IPv4",
        "format-ethernet": "{ipaddr}/{cidr} IPv4",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "on-click": "kitty -e nmtui"
    },
    "custom/separator": {
        "format": "|",
        "tooltip": false
    },
    "custom/spacer": {
        "format": " ",
        "tooltip": false
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
